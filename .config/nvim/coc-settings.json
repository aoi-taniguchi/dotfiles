{
  "coc": {
    "preferences": {
      "useQuickfixForLocations": true,
      "snippets.enable": true,
      "formatOnSaveFiletypes": ["python"]
    }
  },
  "python": {
    "venvFolders": ["venv1"],
    "venvPath": "~/work",
    "linting": {
      "enabled": true,
      "pylintEnabled": true,
      "lintOnSave": true
    },
    "jediEnabled": false,
    "formatting": {
      "provider": "black",
      "blackPath": "~/.pyenv/shims/black"
    },
    "sortImports": {
      "path": "~/.pyenv/shims/isort"
    }
  }
}
